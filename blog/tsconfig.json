{
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "strictFunctionTypes": false,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "include": ["src/**/*", "@types/**/*"],
  "exclude": ["node_modules"]
}
